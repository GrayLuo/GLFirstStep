<html>
<% include commonheader.ejs %>
<body>
<div class="admin-login-form-title"><h2>管理员登录</h2></div>
<form role="form" class="login-form" method="post">
	<% if (error) { %>
		<div class="alert alert-danger alert-dismissable">
		   <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	      	<%= error %>
	    </div>
    <% } %>
	<fieldset>
		<div class="form-group">
			<label for="name">名称</label>
			<input type="text" class="form-control" id="name" name="name" placeholder="请输入用户名" required>
		</div>
		<div class="form-group">
			<label for="password">密码</label>
			<input type="password" class="form-control" id="password" name= "password" placeholder="请输入密码" required>
		</div>
		<button type="submit" class="btn btn-primary btn-block">登录</button>
	</fieldset>
</form>
</body>
<% include commonfooter.ejs %>
</html>