<% include admin_header.ejs %>
<div class="admin-right-container">
	<div class="btn-toolbar">
		<a href="/admin/book_categories/new">
			<button class="btn btn-primary">添加书籍分类</button>
		</a>
	</div>
	<div class="admin-list">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>名称</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
				<% if( categories && categories.length > 0){ %>
					<% categories.forEach(function(category) { %>
						<tr>
							<td><%= category.id %></td>
							<td><%= category.name %></td>
							<td>
								<a href="/admin/book_category/edit/<%= category.id %>"><i class="glyphicon glyphicon-edit"></i></a>&nbsp&nbsp
								<a href="/admin/book_category/remove/<%= category.id %>" onclick="return confirm('确认删除');"><i class="glyphicon glyphicon-remove"></i></a>
							</td>
						</tr>
					<% }) %>
				<% } %>
			</tbody>
		</table>
		<ul class="pagination" id="pagination"></ul>  
	</div>
</div>
<script src="/javascripts/admin_crud.js"></script>

<% include admin_footer.ejs %>